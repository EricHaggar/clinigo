<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WorkingHoursActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:text="Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:height="100px"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:width="300px"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End"
            android:width="300px"
            android:textStyle="bold"
            android:gravity="center"/>


    </TableRow>

    <TableRow>

        <TextView
            android:text="Monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:height="100px"
            android:width="210px"
            android:gravity="center"/>

        <TextView
            android:id="@+id/mondayStart"
            android:gravity="center"
            android:text="9:00 AM"
            android:width="300px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mondayEnd"
            android:width="300px"
            android:gravity="center"
            android:text="5:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </TableRow>

    <TableRow>

        <TextView
            android:text="Tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:height="100px"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tuesdayStart"
            android:width="300px"
            android:gravity="center"
            android:text="9:00 AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tuesdayEnd"
            android:width="300px"
            android:gravity="center"
            android:text="5:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow>

        <TextView
            android:text="Wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:height="100px"
            android:gravity="center"/>

        <TextView
            android:id="@+id/wednesdayStart"
            android:width="300px"
            android:gravity="center"
            android:text="9:00 AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/wednesdayEnd"
            android:width="300px"
            android:gravity="center"
            android:text="5:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow>

        <TextView
            android:text="Thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:height="100px"
            android:gravity="center"/>

        <TextView
            android:id="@+id/thursdayStart"
            android:width="300px"
            android:gravity="center"
            android:text="9:00 AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/thursdayEnd"
            android:width="300px"
            android:gravity="center"
            android:text="5:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow>

        <TextView
            android:text="Friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:height="100px"
            android:gravity="center"/>

        <TextView
            android:id="@+id/fridayStart"
            android:width="300px"
            android:gravity="center"
            android:text="9:00 AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fridayEnd"
            android:width="300px"
            android:gravity="center"
            android:text="5:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow>

        <TextView
            android:text="Saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:height="100px"
            android:gravity="center"/>

        <TextView
            android:id="@+id/saturdayStart"
            android:width="300px"
            android:gravity="center"
            android:text="9:00 AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/saturdayEnd"
            android:width="300px"
            android:gravity="center"
            android:text="5:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow>

        <TextView
            android:text="Sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:height="100px"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sundayStart"
            android:width="300px"
            android:gravity="center"
            android:text="9:00 AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sundayEnd"
            android:width="300px"
            android:gravity="center"
            android:text="5:00 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>
    <TextView
        android:width="300px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"/>


    <TextView
        android:width="300px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:height="100px"
            android:gravity="center"
            android:text="Day"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300px"
            android:gravity="center"
            android:text="Start"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300px"
            android:gravity="center"
            android:text="End"
            android:textStyle="bold" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner_daysOfTheWeek"
            android:layout_width="400px"
            android:layout_column="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300px"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:text="9:00 AM"
            android:onClick="showTimePickerDialog"/>

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300px"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:text="5:00 PM"
            android:onClick="showTimePickerDialog"/>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:height="100px"
            android:gravity="center"
            android:text="CLOSED"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/closedSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:onClick="handleSwitchOnClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="300px"
            android:gravity="center"
            android:text=""
            android:textStyle="bold" />



    </TableRow>




    <TextView
        android:width="300px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
            android:layout_width="@dimen/large_button_width"
            android:layout_height="wrap_content"
            android:text="Update Time"
            android:id="@+id/button"
            android:layout_marginBottom="8dp"
            android:background="@drawable/standard_buttons"
            android:textColor="@color/colorText"
            android:onClick="updateTime"/>


</TableLayout>